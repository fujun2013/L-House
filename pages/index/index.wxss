/**index.wxss**/

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #fff87a;
}

.box {
  position: absolute;
  left: 12px;
  right: 12px;
  top: 12px;
  bottom: 12px;
  background: #fff;
  border: 1px solid #aaa;
}

.door {
  width: 85%;
  height: 70%;
  margin: 60px auto 0px;
  border: 1px dashed #aaa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 100px;
  height: 100px;
  border: solid 1px #aaa;
  margin: 25px auto 40px;
  border-radius: 50px;
}

.icon image {
  width: 100px;
  height: 100px;
}

.door label {
  width: 80%;
  margin-bottom: 40px;
  font-size: 18px;
  border-bottom: 1px solid #999;
  border-radius: 10px;
}

.door label text {
  width: 50px;
  float: left;
  padding-left: 20px;
  line-height: 26.5px;
}

.door label input {
  float: right;
  width: 150px;
  font-size: 16px;
  padding-left: 5px;
}

button {
  display: inline-block;
  margin: 30px 20px 0px;
  background: #00bcd4;
  color: #fff;
}

.holle {
  width: 100%;
  text-align: center;
  color: #00bcd4;
  margin-top: 30px;
  font-weight: bold;
}
