/* pages/detail/detail.wxss */
page {
  background-color: #fff87a;
}

.container {
  position: absolute;
  width: 100%;
  height: 100%;
}

.box {
  position: absolute;
  left: 12px;
  right: 12px;
  top: 12px;
  bottom:12px;
  background: #fff;
  border: 1px solid #aaa;
}

.avatar {
  width: 100px;
  height: 100px;
  border: solid 1px #aaa;
  margin: 25px auto;
  border-radius: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar image {
  width: 90px;
  height: 80px;
  margin-top: -10px;
}

.avatar text {
  display: inline-block;
  margin-top: -10px;
  color: #666;
}
.layout,.room_info{
    width:92%;
    margin:10px auto;
    padding-bottom:10px;
    box-shadow: 0 2px 2px 2px #eee;
}
.name,.value,.type{
    width:96%;
    margin:0 auto;
    display: flex;
    justify-content: space-between;
    line-height: 30px;
    border-bottom:1px solid #aaa;
}
.value image{
    width:30px;
    height:30px;
    margin:5px;
}
.type text{
    line-height: 40px;
    width:37.5%;
    display: block;
    text-align: left;
}
.type .little{
    width:25%;
}
button{
    width:92%;
    margin-top:30px;
}